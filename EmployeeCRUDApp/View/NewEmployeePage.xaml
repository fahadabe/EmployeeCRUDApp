<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="EmployeeCRUDApp.View.NewEmployeePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="New Employee">
    <ContentPage.Content>
        <StackLayout Padding="10">

            <Label Text="First Name" />
            <Entry Text="{Binding NewEmployee.FirstNamele}" />
            <Label Text="Last Name" />
            <Entry Text="{Binding NewEmployee.LastName}" />
            <Label Text="Email" />
            <Entry Keyboard="Email" Text="{Binding NewEmployee.Email}" />
            <Label Text="Phone Number" />
            <Entry Keyboard="Telephone" Text="{Binding NewEmployee.PhoneNumber}" />
            <Label Text="Address" />
            <Entry Text="{Binding NewEmployee.Address}" />
            <Button Command="{Binding AddEmployeeCommand}" Text="Save" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>